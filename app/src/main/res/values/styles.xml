<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/titleSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.LongText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:lineHeight">@dimen/lineHeight</item>
    </style>

    <style name="AppTheme.Button" parent="TextAppearance.AppCompat.Button">
<!--        <item name="android:backgroundTint">@color/button_color</item>     //removed this again line since button color change no longer worked-->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingStart">@dimen/paddingStart</item>
        <item name="android:paddingEnd">@dimen/paddingEnd</item>
    </style>

</resources>
